<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <title>Sign Up</title>
  <link rel="stylesheet" href="/style/admin/register.css">
</head>

<body>
  <div class="main-container">
    <div class="container">
      <img class="logo" src="https://www.instagram.com/static/images/web/logged_out_wordmark.png/7a252de00b20.png"
        alt="Instagram">
      <small style="color:red; display:block;">{{message}}</small>

      <form id="signupForm" method="post" action="/admin/addUser">
        <input type="email" name="email" placeholder="Email" id="email">
        <small id="email-error" style="color:red; display:none;"></small>

        <input type="text" name="username" placeholder="Username" id="username">
        <small id="username-error" style="color:red; display:none;"></small>

        <div class="password-input-wrapper">
          <input id="password" type="password" class="password" name="password" placeholder="Password" required />
          <i class="bi bi-eye-slash" id="togglePassword"></i>
        </div>
        <small id="password-error" style="color: red; display: none;"></small>

        <!-- <input type="password" name="Confirm_password" placeholder="Confirm Password" id="ConfirmPassword">
        <small id="ConfirmPassword-error" style="color:red; display:none;"></small> -->

        <div class="password-input-wrapper">
          <input type="password" name="Confirm_password" placeholder="Confirm Password" id="ConfirmPassword">
          <i class="bi bi-eye-slash" id="togglePassword-2"></i>
        </div>
        <small id="ConfirmPassword-error" style="color:red; display:none;"></small>

        <button class="btn btn-primary" type="submit" id="signupButton">Sign Up</button>
      </form>
    </div>

    <div class="login">
      Have an account? <a href="login">Log in</a>
    </div>


    <!-- togglePassword -->
    <script>
      function setupToggle(inputId, toggleId) {
        const input = document.getElementById(inputId);
        const toggle = document.getElementById(toggleId);

        toggle.addEventListener("click", function () {
          const type = input.getAttribute("type") === "password" ? "text" : "password";
          input.setAttribute("type", type);
          this.classList.toggle("bi-eye");
          this.classList.toggle("bi-eye-slash");
        });
      }

      setupToggle("password", "togglePassword");
      setupToggle("ConfirmPassword", "togglePassword-2");
    </script>

    <!-- register validation  -->
    <script src="/js/admin/registerValidation.js"></script>
</body>

</html>